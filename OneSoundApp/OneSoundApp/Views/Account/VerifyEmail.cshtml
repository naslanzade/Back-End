
@{
    ViewData["Title"] = "VerifyEmail";
}



@section Css{
    <link rel="stylesheet" href="~/assets/scss/signup/signup.css">
}

<!-- Main-part-start -->
<main>
    <section id="bg-img">
        <div class="img">
            <div class="sign wow fadeInUp" data-wow-delay="100ms">
                <h2>Welcome</h2>
            </div>
        </div>
    </section>

    <section id="signUp">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-8">
                    <div class="sign">                        
                        <div class="content" >

                            <div class="container my-3">

                                <div class="alert alert-primary" role="alert" style="background-color:none;color:black;border-color: none;">
                                    Please check you email!
                                </div>

                            </div>
                        
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="scrollBtn" class="mt-4">
        <div class="btn ">
            <i class="fa-solid fa-angle-up"></i>
        </div>
    </section>
</main>
<!-- Main-part-end -->

@section Scripts {
    <script src="~/assets/js/common.js"></script>
    <script src="~/assets/js/signup/signup.js"></script>
    <script src="~/assets/js/cart.js"></script>
    <partial name="_ValidationScriptsPartial" />

}

