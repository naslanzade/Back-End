@model PodcastDetailVM
@{
    ViewData["Title"] = "Detail";
}

<div class="col-lg-10 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Author
                            </th> 
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @foreach (var item in Model.Images)
                                {
                                    <img src="~/assets/images/@item.Image" alt="image" style="width:100px;height:100px; border-radius:0%" />
                                }
                                
                            </td>
                            <td>
                                @Model.Name
                            </td>
                            <td>
                                <input class="form-control" id="customFile" asp-for="Description" style="height:100px;" />
                            </td>
                            <td>
                                @Model.AuthorName
                            </td>
                         

                        </tr>

                    </tbody>
                </table>
            </div>
            <br></br>
            <a asp-action="Index" class="btn btn-outline-info btn-fw">Back</a>
        </div>
    </div>

</div>

