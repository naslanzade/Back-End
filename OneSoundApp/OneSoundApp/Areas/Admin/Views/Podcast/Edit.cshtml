@model PodcastEditVM
@{
    ViewData["Title"] = "Edit";
}


<style>
    .images {
        position: relative;
       
    }

        .images:hover img {
            filter: brightness(50%);
        }

        .images img {
            transition: all 0.5s;
        }

        .images:hover button {
            display: block;
            opacity: 1;
            transition: all 0.5s;
        }

        .images button {
            position: absolute;
            left: 75px;
            top: 150px;
            opacity: 0;
        }

</style>

<div class="container my-5">
    <div class="d-flex">
        @foreach (var item in Model.Images)
        {
            <div class="images mr-2">
                <img src="~/assets/images/@item.Image" class="product-image" style="width:200px; height:300px; padding-left:10px;" />
                @if (!item.IsMain)
                {
                    <button data-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></button>

                }

            </div>
        }
    </div>
    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group mt-3">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger d-block"></span>
        </div>
        <div class="form-group mt-3">
            <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger d-block"></span>
        </div>    
        <div class="form-group mt-3">
            <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.authors"></select>
        </div>
        <div class="form-group mt-3">
            <lable>Add new Images</lable>
            <input asp-for="newImages" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success btn-rounded btn-fw mt-3">Submit</button>
        <a asp-action="Index" class="btn btn-primary btn-rounded btn-fw mt-3">Back</a>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/Admin/js/podcast.js"></script>
}

