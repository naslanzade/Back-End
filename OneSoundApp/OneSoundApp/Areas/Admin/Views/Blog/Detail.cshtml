@model BlogDetailVM
@{
    ViewData["Title"] = "Detail";
}

<div class="col-lg-10 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Author
                            </th>
                            <th>
                                Category
                            </th>
                            <th>
                                Create Date
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <img src="~/assets/images/@Model.Image" alt="image" style="width:100px;height:100px; border-radius:0%" />
                            </td>
                            <td>
                                @Model.Title
                            </td>
                            <td>
                                <input class="form-control" id="customFile" asp-for="Description" style="height:100px;"/>
                            </td>
                            <td>
                                @Model.AuthorName
                            </td>
                            <td>
                                @Model.CategoryName
                            </td>
                            <td>
                                @Model.CreatedDate
                            </td>

                        </tr>

                    </tbody>
                </table>
            </div>
            <br></br>
            <a asp-action="Index" class="btn btn-outline-info btn-fw">Back</a>
        </div>
    </div>

</div>


