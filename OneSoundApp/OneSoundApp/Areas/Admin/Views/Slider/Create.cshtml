@model SliderCreateVM


@{
    ViewData["Title"] = "Create";
}

<div class="container my-5">
    <form method="post" asp-action="Create" enctype="multipart/form-data">

        <input asp-for="Images" class="form-control" />
        <span asp-validation-for="Images" class="text-danger d-block"></span>
        <div class="form-group mt-3">
            <label for="formFile" class="form-label my-2">Add Title</label>
            <input class="form-control" id="customFile" asp-for="Title" />
            <span class="text-danger" asp-validation-for="Title">@ViewBag.error</span>
        </div>
        <div class="form-group">
            <label for="formFile" class="form-label my-2">Add Header</label>
            <input class="form-control" id="customFile" asp-for="Header" />
            <span class="text-danger" asp-validation-for="Header">@ViewBag.error</span>
        </div>       

        <button type="submit" class="btn btn-inverse-primary btn-fw mt-3">Submit</button>

        <a asp-action="Index" class="btn btn-outline-info btn-fw mt-3">Back</a>
    </form>
</div>


